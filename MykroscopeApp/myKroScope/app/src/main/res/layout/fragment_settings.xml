<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/webImage"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/profileImage"
                android:src="@drawable/ic_www" />

            <TextView
                android:id="@+id/websiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:clickable="true"
                android:onClick="webClick"
                android:text="Website"
                android:textSize="24sp" />

        </TableRow>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5sp"
            android:layout_alignParentTop="true"
            android:background="#c0c0c0" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/githubImage"
                android:layout_width="83dp"
                android:layout_height="42dp"
                android:layout_alignBottom="@+id/githubText"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_github_mark" />

            <TextView
                android:id="@+id/githubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="githubClick"
                android:text="Github"
                android:textSize="24sp" />


        </TableRow>

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:background="#c0c0c0" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/contactImage"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/contactUsText"
                android:layout_alignStart="@+id/notiImage1"
                android:src="@drawable/ic_email_black_24dp" />

            <TextView
                android:id="@+id/contactUsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="contactClick"
                android:text="Contact Us"
                android:textSize="24sp" />


        </TableRow>

    </TableLayout>


</RelativeLayout>